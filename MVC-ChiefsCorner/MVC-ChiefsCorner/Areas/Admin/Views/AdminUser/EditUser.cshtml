@model MVC_ChiefsCorner.Models.Authentication.SignUp.SignUpAppUser

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 20px;">
    <a asp-controller="AdminUser" asp-action="Index" style="color: #333;"><i class="fa-solid fa-arrow-left fa-3x"></i></a>
    <h1 style="margin-top: 20px;">User Details</h1>
</div>
<hr />
<h2>Edit User</h2>

<form asp-controller="AdminUser" asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Email" name="userEmail" />
    
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro">
            <option value="MALE">Male</option>
            <option value="FEMALE">Female</option>
            <option value="OTHER">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
