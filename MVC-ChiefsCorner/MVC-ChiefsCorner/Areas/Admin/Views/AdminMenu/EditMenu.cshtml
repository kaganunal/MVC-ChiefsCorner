@model MVC_ChiefsCorner.Models.Menu

@{
    ViewData["Title"] = "Edit Menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 20px;">
    <a asp-controller="AdminMenu" asp-action="Index" style="color: #333;"><i class="fa-solid fa-arrow-left fa-3x"></i></a>
    <h1 style="margin-top: 20px;">Edit Menu</h1>
</div>
<hr />

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div style="margin: 20px; color: #fff; background-color: #dc3545; padding: 10px;">
        @ViewBag.ErrorMessage
    </div>
}

<form method="post" asp-action="EditMenu" asp-controller="AdminMenu" enctype="multipart/form-data" style="margin: 20px;">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" style="font-weight: bold;">Menu Name</label>
        <input asp-for="Name" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" style="font-weight: bold;">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4" style="width: 300px; padding: 6px; background-color: gainsboro"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" style="font-weight: bold;">Price</label>
        <input asp-for="Price" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MenuCategoryId" style="font-weight: bold;">Category</label>
        <select asp-for="MenuCategoryId" asp-items="@(new SelectList(ViewData["MenuCategories"] as List<MVC_ChiefsCorner.Models.MenuCategory>, "Id", "Name"))" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro"></select>
        <span asp-validation-for="MenuCategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath" style="font-weight: bold;">Image</label>
        <input asp-for="ImagePath" type="file" class="form-control" name="file" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable" style="font-weight: bold;">Is Available</label>
        <input asp-for="IsAvailable" type="checkbox" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PreparationTime" style="font-weight: bold;">Preparation Time</label>
        <input asp-for="PreparationTime" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" />
        <span asp-validation-for="PreparationTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" style="padding: 8px 16px; border: none; color: #fff;">Save</button>
</form>
