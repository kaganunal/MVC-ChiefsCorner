@model MVC_ChiefsCorner.Models.Menu

@{
    ViewData["Title"] = "Delete Menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 20px;">
    <a asp-controller="AdminMenu" asp-action="Index" style="color: #333;"><i class="fa-solid fa-arrow-left fa-3x"></i></a>
    <h1 style="margin-top: 20px;">Delete Menu</h1>
</div>
<hr />

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div style="margin: 20px; color: #fff; background-color: #dc3545; padding: 10px;">
        @ViewBag.ErrorMessage
    </div>
}

<div style="margin: 20px;">
    <h3>Are you sure you want to delete this menu?</h3>
    <div>
        <strong>Menu Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Price:</strong> @Model.Price
    </div>

    <form method="post" asp-action="DeleteMenuConfirmed" asp-controller="AdminMenu" style="margin-top: 20px;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" style="padding: 8px 16px; border: none; color: #fff;">Delete</button>
    </form>
</div>
