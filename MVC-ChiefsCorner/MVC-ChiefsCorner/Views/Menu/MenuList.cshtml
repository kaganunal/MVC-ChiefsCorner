@using MVC_ChiefsCorner.Models

@model List<Menu>

<h1>Menüler</h1>

<div class="container">
    <div class=" row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 border-2">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top width:80px height:200px;" src="@Html.DisplayFor(modelItem => item.ImagePath)" alt="Card image cap">
                    <div class="card-body">

                        <p class="card-text">
                            Name: @Html.DisplayFor(modelItem => item.Name)
                        </p>
                        <p class="card-text">Price: @Html.DisplayFor(modelItem => item.Price)</p>

                        <a href="@Url.Action("AddToOrder", new { menuId = item.Id, orderId = 1 })">Siparişe Ekle</a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-sharp fa-solid fa-trash"></i></a>
                        <a asp-action="MenuDetails" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-sharp fa-solid fa-circle-info"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

