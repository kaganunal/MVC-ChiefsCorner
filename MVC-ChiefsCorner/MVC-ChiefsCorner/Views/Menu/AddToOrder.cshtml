@model Menu

@{
    ViewData["Title"] = "AddToOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-3">Add To Order</h1>
<hr />

<div class="text-center">
    <h4>Menu Details</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImagePath)" class="img-fluid" height="400" width="400" draggable="true" />
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) ₺
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="text-center mt-3">
    <form method="post" asp-action="AddToOrder">
        <input type="hidden" name="menuId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Add to Order</button>
    </form>
</div>

