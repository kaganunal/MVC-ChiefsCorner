@model MVC_ChiefsCorner.Models.Authentication.SignIn.SignInAppUser


<section id="main" class="container">
    <section class="box special">
        <header class="major">
            <h1>SignIn</h1>


            <div class="col justify-content-center d-flex">
                <div class="col-md-4 ">
                    <form asp-action="SignIn">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group m-3">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group m-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group m-3">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" name="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="form-group m-3">
                            <input type="submit" value="Sign In!" class="btn btn-primary" />
                        </div>
@*                        @if (!Model.IsEmailConfirmed)
                        {
                            <div class="alert alert-warning">
                                Your email address has not been confirmed. Please check your email and confirm your account.
                            </div>
                        }*@
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </header>
    </section>
</section>

