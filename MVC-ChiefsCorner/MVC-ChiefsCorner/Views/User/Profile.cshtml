@model MVC_ChiefsCorner.Models.Authentication.SignUp.SignUpAppUser

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Profile</h2>
            <hr />

            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Surname">Surname</label>
                <input asp-for="Surname" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>

            <div class="form-group">
                <label asp-for="BirthDate">Birth Date</label>
                <input asp-for="BirthDate" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <input asp-for="Gender" class="form-control" style="width: 300px; padding: 6px; background-color: gainsboro" disabled />
            </div>
        </div>
    </div>
</div>
